<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="LoanShark.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LoanShark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Chat message templates -->
            <DataTemplate x:Key="TextMessageTemplateLeft">
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" />
                    <TextBlock Text="{Binding Content}" Foreground="White" TextWrapping="Wrap" MaxWidth="400" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="TextMessageTemplateRight">
                <StackPanel Margin="5" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" HorizontalAlignment="Right" />
                    <TextBlock Text="{Binding Content}" Foreground="White" TextWrapping="Wrap" MaxWidth="400" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="ImageMessageTemplateLeft">
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" />
                    <Image Source="{Binding ImageURL}" MaxWidth="200" Stretch="Uniform" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="ImageMessageTemplateRight">
                <StackPanel Margin="5" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" HorizontalAlignment="Right" />
                    <Image Source="{Binding ImageURL}" MaxWidth="200" Stretch="Uniform" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="TransferMessageTemplateLeft">
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" />
                    <StackPanel>
                        <TextBlock Text="{Binding Description}" Foreground="White" TextWrapping="Wrap" MaxWidth="400" />
                        <TextBlock Text="{Binding Amount}" Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="TransferMessageTemplateRight">
                <StackPanel Margin="5" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" HorizontalAlignment="Right" />
                    <StackPanel>
                        <TextBlock Text="{Binding Description}" Foreground="White" TextWrapping="Wrap" MaxWidth="400" />
                        <TextBlock Text="{Binding Amount}" Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="RequestMessageTemplateLeft">
                <StackPanel Margin="5">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" />
                    <StackPanel>
                        <TextBlock Text="{Binding Description}" Foreground="White" TextWrapping="Wrap" MaxWidth="400" />
                        <TextBlock Text="{Binding Amount}" Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="RequestMessageTemplateRight">
                <StackPanel Margin="5" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding SenderUsername}" Foreground="Gray" FontSize="10" HorizontalAlignment="Right" />
                    <StackPanel>
                        <TextBlock Text="{Binding Description}" Foreground="White" TextWrapping="Wrap" MaxWidth="400" />
                        <TextBlock Text="{Binding Amount}" Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>